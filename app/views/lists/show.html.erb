<div class="container">
<h1> My List </h1>

<h5><%= "Name List: #{@list.name}" %></h5>

<ul class="list-group mb-4">
    <% @list.bookmarks.each do |bookmark| %>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
        <li class="list-group-item"><%= "Movie: #{bookmark.movie.title}" %> </li>
        <li class="list-group-item"><%= "My Comments: #{bookmark.comment}" %> </li>
        <li class="list-group-item mb-4"><%= "Rating: #{bookmark.movie.rating}" %> </li>
    <% end %>
</ul>

<%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Back to Lists", lists_path, class: "btn btn-primary" %>
</div>